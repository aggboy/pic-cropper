.ok{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  text-align: center;
  color: #fff;
  z-index: 999;
}
.wrapper {
  padding: 66rpx 48rpx 66rpx 48rpx;
}

.wrapper .item {
  margin-bottom: 42rpx;
}

.wrapper .item .title-box {
  border-left: 10rpx solid #0181ff;
  position: relative;
}

.wrapper .item .title-box .title {
  padding-left: 30rpx;
  color: #333;
  font-weight: 600;
}

.wrapper .item .title-box .default-status {
  position: absolute;
  right: 0;
  top: 0;
  color: #0181ff;
  font-size: 26rpx;
}

.wrapper .item .title-box .ok-status {
  position: absolute;
  right: 0;
  top: 0;
  color: #00ba36;
  font-size: 26rpx;
}

.wrapper .item .title-box .fail-status {
  position: absolute;
  right: 0;
  top: 0;
  color: #ff0101;
  font-size: 26rpx;
}

.wrapper .item .idcard-status {
  width: 100%;
  height: 100%;
}

.wrapper .item .idcard-status image {
  width: 100%;
  height: 482rpx;
}

.wrapper .item .info-box {
  margin-top: 50rpx;
  display: flex;
  align-items: flex-end;
  position: relative;
}

.wrapper .item .info-box .left .upload-btn {
  width: 54rpx;
  height: 56rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.wrapper .item .info-box .left .upload-btn image {
  width: 100%;
  height: 100%;
}

.wrapper .item .info-box .left .upload {
  width: 356rpx;
  height: 460rpx;
  border: 1px solid #dbdbdb;
  position: relative;
}

.wrapper .item .info-box .left .upload-ok {
  width: 356rpx;
  height: 460rpx;
}

.wrapper .item .info-box .left .upload-ok image {
  width: 100%;
  height: 100%;
}

/* 默认状态 */

.wrapper .item .info-box .right {
  width: 248rpx;
  margin-left: 48rpx;
  position: absolute;
  bottom: 0;
  right: 0;
}

.wrapper .item .info-box .right .tip {
  color: #555;
  font-size: 28rpx;
}

.wrapper .item .info-box .right .photo {
  width: 248rpx;
  height: 312rpx;
  margin-top: 12rpx;
}

.wrapper .item .info-box .right .photo image {
  width: 100%;
  height: 100%;
}

/* 未审核状态 */

.wrapper .item .info-box .default-des, .success-des {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 228rpx;
  color: #97a5be;
  font-size: 26rpx;
}

.wrapper .item .info-box .reason-des {
  position: absolute;
  right: 0;
  top: 0rpx;
  width: 228rpx;
  color: #333;
  font-size: 26rpx;
}

.wrapper .item .info-box .fail-des {
  position: absolute;
  right: 0;
  top: 50rpx;
  width: 228rpx;
  color: #97a5be;
  font-size: 26rpx;
}

.wrapper .item .info-box .fail-des-btn {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 186rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 6rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  background-color: #0181ff;
}

.id-tips {
  margin-top: 20rpx;
  padding: 34rpx 0;
  background-color: #eff1f6;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #97a5be;
  font-size: 28rpx;
}

.id-tips .two-step {
  text-indent: 1em;
  margin-top: 20rpx;
}

.id-tips .three-step {
  text-indent: 1em;
  margin-top: 22rpx;
}

.id-tips .four-step {
  margin-top: 24rpx;
  color: #0181ff;
}

.btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  /* margin-top: 40rpx; */
  text-align: center;
  color: #fff;
  font-weight: 600;
  background-color: #0181ff;
}

/* ------预览------ */

.mask {
  position: fixed;
  background: #000;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.mask .mask-img {
  width: 480rpx;
  height: 750rpx;
  top: 50%;
  left: 50%;
  position: absolute;
  transform: translate(-50%, -50%) rotate(-90deg);
}

/* ----------身份证样式 */

.card-wrapper {
  width: 100%;
}

.card-wrapper .card-img {
  width: 480rpx;
  height: 680rpx;
  transform: translateX(20%) rotate(-90deg);
  transform-origin: center center;
  -webkit-transform-origin: center center;
  margin-top: -90rpx;
}

.card-wrapper .handle {
  margin-top: -80rpx;
  position: relative;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.card-wrapper .handle .reply-btn {
  margin: 0 auto;
  width: 184rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 6rpx;
  text-align: center;
  color: #fff;
  font-size: 26rpx;
  background-color: #0181ff;
}

.card-wrapper .handle .des {
  color: #97a5be;
  font-size: 24rpx;
  margin-top: 16rpx;
}

.card-wrapper .handle .des .reason-des {
  color: #000;
  font-size: 24rpx;
}

/* ------------相机 */

.index-hd {
  text-align: center;
  position: relative;
}

.controls {
  position: relative;
  display: flex;
  height: 100%;
}

.btn-box {
  position: absolute;
  margin-top: -150rpx;
  z-index: 9999;
}

.no-canvas {
  opacity: 0;
  /* display: none; */
}

.red-btn {
  background-color: red;
  color: #fff;
  width: 368rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin: 0 auto;
}

.my-camera-box {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}
